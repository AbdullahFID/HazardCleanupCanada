      function debounce(fn, wait = 150) {
        let timeout;
        return function(...args) {
          clearTimeout(timeout);
          timeout = setTimeout(() => fn.apply(this, args), wait);
        };
      }

      // ===========================================
      // SMOOTH SCROLLING FOR ANCHOR LINKS
      // ===========================================
      
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          const href = this.getAttribute('href');
          if (href && href !== '#') {
            e.preventDefault();
            const target = document.querySelector(href);
            if (target) {
              window.scrollTo({
                top: target.offsetTop - 100,
                behavior: 'smooth'
              });
            }
          }
        });
      });

      // ===========================================
      // NAVIGATION SCROLL BEHAVIOR
      // ===========================================
      
      let lastScrollY = window.scrollY;
      let ticking = false;

      function updateNav() {
        const currentScrollY = window.scrollY;
        const navbar = document.getElementById('navbar');
        const mobileBottomNav = document.getElementById('mobile-bottom-nav');
        const mobilePill = document.getElementById('mobile-pill');

        // Hide/show navigation on scroll
        if (currentScrollY > lastScrollY && currentScrollY > 100) {
          // Scrolling down - hide nav
          navbar?.style.setProperty('transform', 'translateY(-100%)');
          mobileBottomNav?.classList.add('hide');
        } else {
          // Scrolling up - show nav
          navbar?.style.setProperty('transform', 'translateY(0)');
          if (mobileBottomNav?.classList.contains('hide')) {
            mobileBottomNav.classList.remove('hide');
            mobilePill?.classList.add('mobile-pop');
            setTimeout(() => mobilePill?.classList.remove('mobile-pop'), 220);
          }
        }

        lastScrollY = currentScrollY;
        ticking = false;

        // Update active section
        updateActiveSection();
      }

      function requestTick() {
        if (!ticking) {
          requestAnimationFrame(updateNav);
          ticking = true;
        }
      }

      window.addEventListener('scroll', requestTick, { passive: true });

      // ===========================================
      // ACTIVE SECTION HIGHLIGHTING
      // ===========================================
      
      function updateActiveSection() {
        const sections = document.querySelectorAll('section[id]');
        const scrollPos = window.scrollY + 120;

        sections.forEach(section => {
          const top = section.offsetTop;
          const bottom = top + section.offsetHeight;
          const id = section.getAttribute('id');

          if (scrollPos >= top && scrollPos < bottom) {
            // Update desktop nav
            document.querySelectorAll('.nav-link').forEach(link => {
              if (link.getAttribute('data-section') === id) {
                link.classList.add('active');
                // Update indicator
                const indicator = document.getElementById('nav-indicator');
                if (indicator) {
                  indicator.style.width = link.offsetWidth + 'px';
                  indicator.style.left = link.offsetLeft + 'px';
                }
              } else {
                link.classList.remove('active');
              }
            });
            
            // Update mobile bottom nav
            document.querySelectorAll('#mobile-bottom-nav .bottom-nav-icon').forEach(icon => {
              if (icon.getAttribute('data-section') === id) {
                icon.classList.add('active');
              } else {
                icon.classList.remove('active');
              }
            });
          }
        });
      }

      // ===========================================
      // SERVICES TOGGLE (Show More/Less)
      // ===========================================
      
      const servicesToggle = document.getElementById('services-toggle');
      const moreServices = document.getElementById('more-services');
      const toggleText = document.getElementById('toggle-text');
      const toggleIcon = document.getElementById('toggle-icon');

      servicesToggle?.addEventListener('click', () => {
        const isHidden = moreServices?.classList.contains('hidden');
        
        if (isHidden) {
          moreServices?.classList.remove('hidden');
          moreServices?.classList.add('animate-fade-in');
          toggleText.textContent = 'Show Less Services';
          toggleIcon?.style.setProperty('transform', 'rotate(180deg)');
          
          // Reinitialize flip cards after revealing
          setTimeout(() => {
            attachFlipEvents();
            sizeFlipCards();
          }, 310);
        } else {
          moreServices?.classList.add('hidden');
          moreServices?.classList.remove('animate-fade-in');
          toggleText.textContent = 'Show More Services';
          toggleIcon?.style.setProperty('transform', 'rotate(0deg)');
        }
      });

      // ===========================================
      // FLIP CARD FUNCTIONALITY
      // ===========================================
      
      function attachFlipEvents() {
        document.querySelectorAll('.flip-card').forEach(card => {
          const toggleBtn = card.querySelector('.flip-toggle');
          const backBtn = card.querySelector('.flip-back');

          // Remove existing listeners to prevent duplicates
          const newToggleBtn = toggleBtn?.cloneNode(true);
          const newBackBtn = backBtn?.cloneNode(true);
          
          toggleBtn?.parentNode?.replaceChild(newToggleBtn, toggleBtn);
          backBtn?.parentNode?.replaceChild(newBackBtn, backBtn);

          // Flip to back
          newToggleBtn?.addEventListener('click', () => {
            card.classList.add('is-flipped');
            newToggleBtn.setAttribute('aria-expanded', 'true');
          });

          // Flip to front
          newBackBtn?.addEventListener('click', () => {
            card.classList.remove('is-flipped');
            newToggleBtn?.setAttribute('aria-expanded', 'false');
          });

          // ESC key to go back
          card.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && card.classList.contains('is-flipped')) {
              card.classList.remove('is-flipped');
              newToggleBtn?.setAttribute('aria-expanded', 'false');
              newToggleBtn?.focus();
            }
          });
        });
      }

      function sizeFlipCards() {
        document.querySelectorAll('.flip-card').forEach(card => {
          const front = card.querySelector('.flip-face.front');
          const back = card.querySelector('.flip-face.back');
          if (!front || !back) return;

          const wasFlipped = card.classList.contains('is-flipped');
          card.classList.remove('is-flipped');

          const frontH = front.scrollHeight;
          const backH = back.scrollHeight;
          const h = Math.max(320, Math.min(Math.max(frontH, backH), 460));

          card.style.height = h + 'px';

          if (wasFlipped) card.classList.add('is-flipped');
        });
      }

      // ===========================================
      // REVIEWS CAROUSEL
      // ===========================================
      
      let currentReview = 0;
      const reviewsTrack = document.getElementById('reviews-track');
      const reviewSlides = document.querySelectorAll('.review-slide');
      const totalReviews = reviewSlides.length;

      function showReview(index) {
        currentReview = (index + totalReviews) % totalReviews;
        if (reviewsTrack) {
          reviewsTrack.style.transform = `translateX(-${currentReview * 100}%)`;
        }
      }

      document.getElementById('prev-review')?.addEventListener('click', () => {
        showReview(currentReview - 1);
      });

      document.getElementById('next-review')?.addEventListener('click', () => {
        showReview(currentReview + 1);
